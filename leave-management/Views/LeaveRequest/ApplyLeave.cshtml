@model leave_management.ViewModels.CreateLeaveRequestVM

@{
    ViewData["Title"] = "ApplyLeave";
}

<h1>ApplyLeave</h1>

<h4>CreateLeaveRequestVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyLeave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.LeaveType.Id" />
            <input type="hidden" asp-for="@Model.LeaveType.Name" />
            <input type="hidden" asp-for="@Model.LeaveType.DefaultDays" />
             <input type="hidden" asp-for="@Model.RequestingEmployee.Id" />


            <div class="row">
                <div class="col-6"><label class="control-label"><span>Name</span></label></div>
                <div class="col-6">     
                    @Html.DisplayFor(model => model.RequestingEmployee.FirstName)  @Html.DisplayFor(model => model.RequestingEmployee.LastName)
                </div>
                </div>
            <div class="row">
                <div class="col-6"><label class="control-label"><span>Leave Type</span></label></div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.LeaveType.Name)
                </div>
            </div>

            <div class="row">
                <div class="col-6"><label asp-for="StartDate" class="control-label"></label></div>
               <div class="col-6"> <input asp-for="StartDate" class="form-control" asp-format="{0:yyyy-MM-dd}" /></div><br/><br/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6"><label asp-for="EndDate" class="control-label"></label></div>
               <div class="col-6"> <input asp-for="EndDate" class="form-control" /></div><br/><br/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6"><label asp-for="DateRequested" class="control-label"></label></div>
                <div class="col-6"> <input readonly asp-for="DateRequested" class="form-control" /></div><br/><br/>
                <span asp-validation-for="DateRequested" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
